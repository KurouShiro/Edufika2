{
  "name": "edufika-session-api",
  "version": "0.1.0",
  "private": true,
  "description": "Edufika Exam Session Authority API",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "migrate": "ts-node src/db/runMigrations.ts",
    "smoke:phone": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/phone-smoke.ps1",
    "usb:reverse": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/adb-reverse.ps1"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.12.0",
    "uuid": "^11.0.3",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
