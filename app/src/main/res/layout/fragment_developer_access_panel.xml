<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/terminal_screen_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            style="@style/Widget.Edufika.TextPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developer_access_title"
            android:textColor="@color/edufika_neon"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/terminal_panel"
            android:orientation="vertical">

            <EditText
                android:id="@+id/developerPasswordInput"
                style="@style/Widget.Edufika.TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/terminal_input_bg"
                android:hint="Developer Password"
                android:inputType="textPassword"
                android:textColorHint="@color/edufika_muted" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/unlockDeveloperButton"
                style="@style/Widget.Edufika.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/submit" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/kioskSwitch"
                style="@style/Widget.Edufika.TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/toggle_kiosk"
                android:textColor="@color/edufika_text"
                app:trackTint="@color/edufika_neon" />

            <TextView
                android:id="@+id/currentServerBaseUrlText"
                style="@style/Widget.Edufika.TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/edufika_muted"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/serverBaseUrlInput"
                style="@style/Widget.Edufika.TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/terminal_input_bg"
                android:hint="@string/backend_url_hint"
                android:inputType="textUri"
                android:textColorHint="@color/edufika_muted" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveServerBaseUrlButton"
                style="@style/Widget.Edufika.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/save_backend_url" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/testServerConnectionButton"
                style="@style/Widget.Edufika.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/test_backend_connection" />

            <EditText
                android:id="@+id/normalBrowserUrlInput"
                style="@style/Widget.Edufika.TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/terminal_input_bg"
                android:hint="@string/manual_url_hint"
                android:inputType="textUri"
                android:textColorHint="@color/edufika_muted" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/openNormalBrowserButton"
                style="@style/Widget.Edufika.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/open_browser_mode" />

            <EditText
                android:id="@+id/adminTokenExpiryMinutesInput"
                style="@style/Widget.Edufika.TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/terminal_input_bg"
                android:hint="@string/admin_token_expiry_minutes_hint"
                android:inputType="number"
                android:textColorHint="@color/edufika_muted" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/generateAdminTokenButton"
                style="@style/Widget.Edufika.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/generate_admin_token" />

            <TextView
                android:id="@+id/generatedAdminTokenText"
                style="@style/Widget.Edufika.TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/edufika_text"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/copyAdminTokenButton"
                style="@style/Widget.Edufika.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/copy_admin_token" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/forceDisableKioskButton"
                style="@style/Widget.Edufika.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/emergency_disable_kiosk" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/developerLogoutButton"
                style="@style/Widget.Edufika.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/logout" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
