<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/terminal_screen_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        style="@style/Widget.Edufika.TextPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/violation_title"
        android:textColor="@color/edufika_warning"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/violationMessageText"
        style="@style/Widget.Edufika.TextPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textColor="@color/edufika_text"
        android:textSize="15sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/violationBackButton"
        style="@style/Widget.Edufika.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/back_to_login" />
</LinearLayout>
